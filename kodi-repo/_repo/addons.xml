<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="service.subsmangler" name="Subtitles Mangler" version="0.0.3" provider-name="bkiziuk">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.addon.metadata">
		<summary lang="en">Subtitles Mangler</summary>
		<description lang="en">Adjusts subtitles files to include black background. Optionally allows to remove advertisement texts and texts for the Hearing Impaired. Doesn't require external plugins.</description>
        <description lang="pl">Konwertuje napisy dodając czarny podkład. Dodatkowo pozwala na usuwanie z napisów podpisów reklamowych oraz znaczników dla niesłyszących. Nie wymaga zależnych wtyczek.</description>
        <disclaimer>Still under development</disclaimer>
        <news>v0.0.3 (2018-02-01)
- custom log filtering
v0.0.2 (2018-01-31)
- initial regexp filtering
v0.0.1  (2018-01-21)
- work in progress</news>
        <platform>all</platform>
        <license>GNU General Public License v3.0</license>
        <forum></forum>
        <website></website>
        <source>https://github.com/bkiziuk/service.subsmangler</source>
		<language></language>
		<email></email>
        <broken></broken>
        <assets>
            <icon></icon>
            <fanart></fanart>
            <screenshot></screenshot>
        </assets>
    </extension>
</addon>

    <addon id="repository.bkiziuk" name="bkiziuk private Kodi repo" version="1.0.0" provider-name="bkiziuk">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="bkiziuk private Kodi repo">
            <info compressed="false">https://bkiziuk.github.io/kodi-repo/_repo/addons.xml</info>
            <checksum>https://bkiziuk.github.io/kodi-repo/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://bkiziuk.github.io/kodi-repo/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>bkiziuk private Kodi repo</summary>
            <description>bkiziuk private Kodi repo</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
